<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBarStar">
        <item name="android:progressTint">@color/colorStars</item>
        <item name="android:secondaryProgressTint">@color/colorStarsDark</item>
        <item name=" android:progressBackgroundTint">@color/colorStarsBackground</item>
    </style>

    <style name="RatingBarDollar">
        <item name="android:progressTint">@color/colorDollar</item>
        <item name="android:secondaryProgressTint">@color/colorDollarDark</item>
        <item name="android:progressDrawable">@drawable/rating_bar_dollar</item>
    </style>

</resources>
